<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--Expanded View of music player-->
    <RelativeLayout
        android:id="@+id/ll_expand"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_expand_control"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="@drawable/drawable_round_musicscreen"
            android:orientation="vertical"
            android:paddingHorizontal="5dp">

            <View
                android:id="@+id/view_lollipop"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_top_collapse"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="4dp"
                    android:background="@drawable/shape_collapse_btn"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imageView_radio"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:adjustViewBounds="true"
                        android:elevation="5dp"
                        android:scaleType="centerCrop"
                        android:visibility="visible"
                        app:riv_border_color="@color/main_color"
                        app:riv_border_width="4dp"
                        app:riv_mutate_background="false"
                        app:riv_oval="true"
                        tools:targetApi="lollipop" />

                    <com.alexnguyen.utils.TemplateView
                        android:id="@+id/my_template_native_ads"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:translationZ="90dp"
                        android:visibility="gone"
                        app:gnt_template_type="@layout/gnt_medium_template_view" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="35dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textView_freq_expand"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="fdfdsfds"
                            android:maxLines="1"
                            android:textSize="19sp" />

                        <ImageView
                            android:id="@+id/imageView_fav_expand"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/image"
                            android:padding="7dp"
                            android:tint="@color/black"
                            android:src="@mipmap/fav_white" />

                        <ImageView
                            android:id="@+id/imageView_share"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/image"
                            android:tint="@color/black"
                            android:padding="7dp"
                            android:src="@mipmap/share" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView_radio_name_expand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="fsdfds"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/textView_song_expand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="fsdfsdf"
                        android:maxLines="2"
                        android:minLines="2"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView_report_expand"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginRight="40dp"
                            android:tint="@color/black"
                            android:background="?attr/selectableItemBackground"
                            android:contentDescription="@string/image"
                            android:padding="7dp"
                            android:src="@mipmap/report" />

                        <ImageView
                            android:id="@+id/imageView_sleep_expand"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:background="?attr/selectableItemBackground"
                            android:contentDescription="@string/image"
                            android:padding="7dp"
                            android:tint="@color/black"
                            android:src="@mipmap/sleep" />

                    </LinearLayout>




                </LinearLayout>




            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_song_seekbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textView_song_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/seekbar_song"
                    android:layout_marginStart="11dp"
                    android:layout_marginLeft="11dp"
                    android:text="0:00"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView_total_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/seekbar_song"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:text="0:00"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_song"
                    style="@style/AppThemeTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:id="@+id/ll_player_expand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_desc_expand"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/image"
                        android:padding="5dp"
                        android:tint="@color/black"
                        android:src="@mipmap/info" />

                    <ImageView
                        android:id="@+id/imageView_previous_expand"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:tint="@color/black"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/image"
                        android:src="@mipmap/previous_white" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_play"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/fab_play"
                        app:fabSize="normal" />

                    <ImageView
                        android:id="@+id/imageView_next_expand"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:tint="@color/black"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/image"
                        android:src="@mipmap/next" />

                    <ImageView
                        android:id="@+id/imageView_volume"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/image"
                        android:padding="5dp"
                        android:tint="@color/black"
                        android:src="@mipmap/volume_full" />

                </LinearLayout>

                <fr.castorflex.android.circularprogressbar.CircularProgressBar
                    android:id="@+id/loader"
                    android:layout_width="39dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="30dp"
                    android:indeterminate="true"
                    android:visibility="gone"
                    app:cpb_color="@color/white"
                    app:cpb_max_sweep_angle="300"
                    app:cpb_min_sweep_angle="10"
                    app:cpb_rotation_speed="1.0"
                    app:cpb_stroke_width="5dp"
                    app:cpb_sweep_speed="1.0" />

            </RelativeLayout>

        </LinearLayout>

        <com.sothree.slidinguppanel.SlidingUpPanelLayout
            xmlns:sothree="http://schemas.android.com/apk/res-auto"
            android:background="@color/white"
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            sothree:umanoPanelHeight="68dp"
            sothree:umanoShadowHeight="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Main Content"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:text="The Awesome Sliding Up Panel"
                android:textSize="16sp" />
        </com.sothree.slidinguppanel.SlidingUpPanelLayout>



    </RelativeLayout>

    <!--Bottom Music Player When Collapsed-->
    <RelativeLayout
        android:id="@+id/ll_collapse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_collapse_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="65dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_player_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/no_fm"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView_song_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/no_song"
                    android:textColor="#aaffffff"
                    android:textSize="14sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:id="@+id/ll_play_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/imageView_player_previous"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/previous_white"
                        android:contentDescription="@string/image"/>

                    <ImageView
                        android:id="@+id/imageView_player_play"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/play_white"
                        android:contentDescription="@string/image" />

                    <ImageView
                        android:id="@+id/imageView_player_next"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/next"
                        android:contentDescription="@string/image" />

                </LinearLayout>

                <fr.castorflex.android.circularprogressbar.CircularProgressBar
                    android:id="@+id/loader_collapse"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:visibility="gone"
                    app:cpb_color="@color/white"
                    app:cpb_max_sweep_angle="300"
                    app:cpb_min_sweep_angle="10"
                    app:cpb_rotation_speed="1.0"
                    app:cpb_stroke_width="4dp"
                    app:cpb_sweep_speed="1.0" />

            </RelativeLayout>

        </LinearLayout>

        <com.pkmmte.view.CircularImageView
            android:id="@+id/imageView_player"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            app:border="true"
            app:border_color="#EEEEEE"
            app:border_width="1dp"
            app:shadow="true" />

    </RelativeLayout>

</RelativeLayout>